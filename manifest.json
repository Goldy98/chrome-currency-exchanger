{
  "manifest_version": 3,
  "name": "Currency Exchanger",
  "description": "A simple currency exchange extension (including XOF)",
  "host_permissions": ["https://api.exchangerate.host/*"],
  "author": "sagboaime267@gmail.com",
  "version": "1.0.0",
  "action": {
    "default_icon": "logo.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "src/background.ts",
    "type": "module",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"]
    }
  ]
}
